@using System.Linq
@model IEnumerable<CarHub.Models.VehicleViewModel>

@{
    ViewData["Title"] = "View";
}

<h1>Welcome to Eddie's Car Sale</h1>

@if(@Model.Any()){
    <div class="list-group">
        @foreach(var car in Model)
        {
            <a class="list-group-item" asp-action="Details" asp-route-id="@car.Id">
                @Html.DisplayFor(c => car.Year)
                @Html.DisplayFor(c => car.Make)
                @Html.DisplayFor(c => car.Model)
                @Html.DisplayFor(c => car.Trim)
            </a>
        }
    </div>
}
else{
    <div class="p-5 mb-4 bg-light rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">We don't have any vehicles in our inventory yet</h1>
        <p class="col-md-8 fs-4">
            Be sure to check regularly to view new inventory, and to stay up to date with our latest offers
        </p>
      </div>
    </div>
}