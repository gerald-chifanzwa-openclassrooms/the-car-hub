@model IEnumerable<CarHub.Models.VehicleMakeViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="flex flex-col items-stretch">
    <div class="px-2 md:px-4 py-4 text-center bg-gray-200">
        <h1 class="text-7xl font-bold font-sans text-indigo-700">Vehicle Makes</h1>
    </div>

    <div class="mx-auto w-full px-8 py-4 flex gap-4">
        <a class="btn bg-gray-300 text-gray-800 hover:bg-gray-500 transition duration-100 ease-in font-bold font-sans" asp-action="Add">Add New Make</a>
    </div>

    @if (@Model.Any())
    {
        <div class="mx-auto w-full px-8 py-4 flex flex-col items-stretch gap-y-2">
            @foreach (var make in Model)
            {
                <div class="bg-white rounded shadow px-4 py-2">
                    <span class="text-lg text-gray-800 font-sans font-bold">@make.Name</span>
                </div>
            }
        </div>
    }
    else
    {
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">No vehicles makes configured yet</h1>
                <p class="col-md-8 fs-4">
                    You may not be able to capture vehicles until you configure makes.
                </p>
                <a class="btn btn-primary btn-lg" asp-action="Add">Add Now</a>
            </div>
        </div>
    }
</div>