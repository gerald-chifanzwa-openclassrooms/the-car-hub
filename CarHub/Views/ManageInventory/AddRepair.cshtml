@model CarHub.Models.VehicleRepairInputViewModel

@{
    ViewData["Title"] = "Add Repair";
}

<div class="flex flex-col items-stretch">
    <div class="px-2 md:px-4 py-4 text-center bg-gray-200">
        <h4 class="text-5xl font-bold text-indigo-700 font-sans">Add Repairs/Modifications</h4>
    </div>

    <div class="mx-auto w-full max-w-xl my-8 rounded-lg shadow-lg bg-white px-8 py-4">
        <h5 class="text-lg text-gray-600">Enter the vehicle make below</h5>
        <div class="w-full">
            <form asp-action="AddRepair" class="flex flex-col items-stretch gap-y-2 pb-2">
                <div class="flex flex-col">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-sm text-red-600 font-sans font-medium my-1"></span>
                </div>
                <div class="flex flex-col">
                    <label asp-for="Cost" class="control-label"></label>
                    <input asp-for="Cost" class="form-control" type="number" min="0" max="999999"  />
                    <span asp-validation-for="Cost" class="text-sm text-red-600 font-sans font-medium my-1"></span>
                </div>
                <div class="flex flex-col">
                    <label asp-for="RepairDate" class="control-label"></label>
                    <input asp-for="RepairDate" class="form-control date-picker" data-value="@DateTime.Today.ToString("dd/MM/yyyy")" />
                    <span asp-validation-for="RepairDate" class="text-sm text-red-600 font-sans font-medium my-1"></span>
                </div>
                <div class="flex items-stretch gap-x-2">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn bg-gray-300 text-gray-800 hover:bg-gray-500 transition duration-100 ease-in font-bold font-sans" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>