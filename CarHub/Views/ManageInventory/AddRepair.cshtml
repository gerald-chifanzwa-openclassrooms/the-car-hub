@model CarHub.Models.VehicleRepairInputViewModel

@{
    ViewData["Title"] = "Add Repair";
}

<h1>Add Repairs/Modifications</h1>

<h4>Add Vehicle Repair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRepair">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" type="number" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairDate" class="control-label"></label>
                <input asp-for="RepairDate" class="form-control date-picker" data-value="@DateTime.Today.ToString("dd/MM/yyyy")" />
                <span asp-validation-for="RepairDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
